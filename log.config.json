{
  "loggers": {
    "main": {
      "level": "debug",
      "outputPaths": ["app.log"],
      "errorOutputPaths": ["stderr"],
      "development": true,
      "sampling": {
        "initial": 100,
        "thereafter": 100
      },
      "encodingConfig": {
        "timeKey": "time",
        "levelKey": "level",
        "nameKey": "logger",
        "callerKey": "caller",
        "messageKey": "msg",
        "stacktraceKey": "stacktrace",
        "lineEnding": "\n",
        "levelEncoder": "lowercase",
        "timeEncoder": "iso8601",
        "durationEncoder": "string",
        "callerEncoder": "short"
      },
      "logRotation": {
        "enabled": true,
        "maxSizeMB": 50,
        "maxBackups": 7,
        "maxAgeDays": 30,
        "compress": true
      },
      "sanitization": {
        "sensitiveFields": ["password", "token", "access_token", "refresh_token"],
        "mask": "****"
      }
    },
    "request": {
      "level": "info",
      "outputPaths": ["request.log"],
      "errorOutputPaths": ["stderr"],
      "development": false,
      "sampling": {
        "initial": 100,
        "thereafter": 100
      },
      "encodingConfig": {
        "timeKey": "time",
        "levelKey": "level",
        "nameKey": "logger",
        "callerKey": "caller",
        "messageKey": "msg",
        "stacktraceKey": "stacktrace",
        "lineEnding": "\n",
        "levelEncoder": "lowercase",
        "timeEncoder": "iso8601",
        "durationEncoder": "string",
        "callerEncoder": "short"
      },
      "logRotation": {
        "enabled": true,
        "maxSizeMB": 200,
        "maxBackups": 5,
        "maxAgeDays": 15,
        "compress": true
      },
      "sanitization": {
        "sensitiveFields": ["password", "token", "access_token", "refresh_token"],
        "mask": "****"
      }
    }
  }
}
